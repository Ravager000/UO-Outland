
# Drop off into a bag by Jaseowns
# UO Outlands
if not varexist golddropoff or not find golddropoff ground -1 -1 10
    overhead "Where should items go?"
    @setvar! golddropoff
endif

@clearignore 
while findtype "gold coin" backpack as jaseowns_Item    
    if not find golddropoff ground -1 -1 2
    overhead "No Bag close?"
    break
    endif
    lift jaseowns_Item 60000
    drop golddropoff -1 -1 -1
    wait 650
    @ignore jaseowns_Item
endwhile
